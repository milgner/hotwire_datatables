<%= turbo_frame_tag(@table) do %>
  <div class="datatable">
    <div class="dt-header dt-row">
      <% @table.columns.each do |column| %>
        <%# FIXME: extremely ugly + should be re-usable by custom components and partials %>
        <%= HotwireDatatables::ColumnPresenter.new(@table, column, request) %>
      <% end %>
    </div>

    <% @table.rows.each do |row| %>
      <div id="<%= row.dom_id %>" class="dt-row">
        <%= render row %>
      </div>
    <% end %>

    <%= render @table.pagination_context %>
  </div>
<% end %>
